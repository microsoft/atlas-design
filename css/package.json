{
	"name": "@microsoft/atlas-css",
	"version": "3.28.0",
	"description": "Styles backing the Atlas Design System used by Microsoft's Developer Relations.",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "stylelint \"./src/**/*.scss\"",
		"lint-fix": "stylelint \"./src/**/*.scss\" --fix",
		"start": "parcel watch src/index.scss",
		"build": "npm run build:css && npm run tokens && npm run class-names",
		"build:css": "wireit",
		"tokens": "wireit",
		"class-names": "wireit",
		"prepublishOnly": "npm run lint && npm run build"
	},
	"wireit": {
		"build:css": {
			"command": "parcel build src/index.scss --no-cache",
			"files": [
				"./src/**/*.scss"
			],
			"output": [
				"./dist/**/*.css"
			]
		},
		"tokens": {
			"command": "node ./tokens/index.js",
			"files": [
				"./tokens/index.js",
				"./src/tokens/**/*.scss"
			],
			"output": [
				"./dist/tokens.json",
				"./dist/tokens.ts"
			]
		},
		"class-names": {
			"command": "node ./class-names/index.js",
			"files": [
				"./class-names/index.js",
				"./dist/index.css"
			],
			"dependencies": [
				"build:css",
				"tokens"
			]
		}
	},
	"homepage": "https://github.com/microsoft/atlas-design",
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/atlas-design"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"files": [
		"dist",
		"src",
		"tokens"
	],
	"keywords": [
		"microsoft",
		"atlas",
		"design-system",
		"css",
		"scss"
	],
	"resolutions": {
		"sass": "grass"
	},
	"author": "Microsoft Corporation",
	"license": "MIT",
	"devDependencies": {
		"@microsoft/stylelint-config-atlas": "4.0.2",
		"@parcel/transformer-sass": "^2.7.0",
		"css-tree": "^2.2.1",
		"eslint-plugin-security": "^1.5.0",
		"fs-extra": "^10.1.0",
		"parcel": "^2.7.0",
		"lightningcss": "1.16.0",
		"prettier": "^2.7.1",
		"quicktype-core": "^6.0.62",
		"grass": "^1.0.2",
		"sass-export": "^2.1.2",
		"stylelint": "^14.13.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-prettier": "^2.0.0",
		"wireit": "^0.9.5"
	}
}
