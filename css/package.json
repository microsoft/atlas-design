		"normalize.css": "^8.0.1"
	},
	"devDependencies": {
		"parcel": "next",
		"@microsoft/stylelint-config-atlas": "2.0.1",
		"prettier": "^2.2.1",
		"sass": "^1.32.8",
		"stylelint": "^13.11.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-prettier": "^1.1.2",
		"sass-extract": "^2.1.0",
